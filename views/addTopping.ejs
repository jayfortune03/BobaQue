<%- include('./partials/headerLoggedIn.ejs', {title: "Add Topping"}) %>
<h1><%= menu[0].name %></h1>
<h3><%= getRp(menu[0].price) %></h3>

<table border="1">
    <tr>
        <th>Topping</th>
        <th>Price</th>
        <th>Action</th>
    </tr>
    <% menu[0].Toppings.forEach(el => { %>
        <tr>
            <td><%= el.name %></td>
            <td><%= getRp(el.price) %></td>
            <td>
                <a href="http://localhost:3000/menu/removeTopping/<%= menu[0].id%>/<%= el.id %>">Remove</a>
            </td>
        </tr>
    <% }) %>
</table>
<br>
<form action="http://localhost:3000/menu/addTopping/<%= menu[0].id%>" method="POST">
    <label for="add">Add Topping</label><br>
    <select name="ToppingId" id="">
        <option value="">Choose Topping</option>
        <% topping.forEach(el => { %>
            <option value=<%= el.id %>><%= el.name %> (<%= getRp(el.price) %>) </option>
        <% }) %>
    </select><br><br>
    <input type="submit" value="Add">
</form>
    <br>
    
<h1>Total Price : <%= getTotalPrice(menu,menu[0].Toppings) %></h1>
<%- include('./partials/footer.ejs') %>
