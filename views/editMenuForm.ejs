<%- include('./partials/headerAdmin.ejs', {title: "Edit Menu"}) %>
    <% data.forEach(el => { %>
        <form action="/menu/edit/<%= el.id%>" method="POST">
            <div class="container">
                <center>
                    <h3>Edit Menu</h3>
                    <h2><b>"<%= el.name %>"</b></h2>
                </center>
              <hr>
      
              <label for="name"><b>Name</b></label>
              <input type="text" value="<%= el.name %>" name="name" id="name" required>
    
              <label for="price"><b>Price</b></label>
              <input type="text" value="<%= el.price %>" name="price" id="price" required>
          
              <label for="description"><b>Description</b></label>
              <input type="text" value="<%= el.description%>" name="description" id="description" required>
    
              <label for="image"><b>Image Link</b></label>
              <input type="text" value="<%= el.image%>" name="image" id="image" required>
          
              <button type="submit" class="registerbtn">Edit Menu</button>
            </div>
          </form>
    <% }) %>
<%- include('./partials/footer.ejs') %>